@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form>
    <div class="col-sm-12 col-md-12 col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="alert alert-danger" id="UserApiErrorMessages" role="alert" style="display:none">
                    
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                    <div class="form-group">
                        <label class="control-label">UserName</label>
                        <input type="text" id="getUserUserNameInput" class="form-control" placeholder="Enter userName" />
                    </div>
                </div>
                <div class="form-group pull-right">
                    <button type="button" id="getUserSubmitbtn" class="btn btn-primary" disabled>Get User</button>
                    <button type="button" id="getUserClearbtn" class="btn btn-primary" disabled>Clear</button>
                </div>
            </div>
        </div>
    </div>
</form>
<div class="col-sm-12 col-md-12 col-lg-12" style="display:none;" id="userResultSection">
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label>UserName:</label>
                    <p id="resultUserName"></p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label>Location:</label>
                    <p id="resultLocation"></p>
                </div>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-12 col-xs-12">
                <div class="form-group">
                    <label>Avatar:</label>
                    <img src=""  id="resultavatarImage" style="width:70px; height:70px; display:none"/>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">

                <table class="table table-bordered" id="userResultTable">
                    <thead>
                        <tr>
                            <th scope="col">Name</th>
                            <th scope="col">Link</th>
                            <th scope="col">Description</th>
                            <th scope="col">Stargazers</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
                <div class="alert alert-warning" id="userResultWarningMessage" role="alert">
                    No Repos Public data found!
                </div>
            </div>
        </div>
        </div>
</div>
@section scripts{
@Scripts.Render("~/bundles/GitHubUsersAPI")
}
